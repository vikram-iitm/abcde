# GCP Secrets Template for Onyx Deployment
# Copy this file to values-gcp-secrets.yaml and fill in the actual values
# DO NOT COMMIT THE FILLED VERSION TO VERSION CONTROL

# Database configuration
externalPostgresql:
  password: "GENERATE_SECURE_PASSWORD_HERE"
  readonlyUser: "db_readonly_user"
  readonlyPassword: "GENERATE_SECURE_PASSWORD_HERE"

# Redis configuration (if password protected)
externalRedis:
  password: ""  # Leave empty if no password

# Google OAuth configuration (REQUIRED for deployment)
googleOAuth:
  clientId: "YOUR_GOOGLE_OAUTH_CLIENT_ID"
  clientSecret: "YOUR_GOOGLE_OAUTH_CLIENT_SECRET"

# Application configuration
auth:
  secret: "GENERATE_SECURE_SECRET_KEY_HERE"

# Model servers configuration (if using OpenAI or other APIs)
modelServers:
  openaiApiKey: ""  # Optional: Add if using OpenAI

# Additional secret environment variables
secretEnv: {}

# Cloud Storage service account key (if using service account auth)
storage:
  serviceAccountKey: ""  # Optional: Add if needed